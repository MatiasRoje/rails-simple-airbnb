<%= render "flats/navbar" %>
<div class="banner" style="background-image: url('https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg')">

<div class="container">
<div class="grid-2col">
<div class="flat-information">

<div class="flat-information-headers">
<h2><%= @flat.name %></h2>
<p><%= @flat.address %></p>
</div>

<div class="flat-information-content">
<h3>A bit more about this flat...</h3>
<p><%= @flat.description %>.</p>
<div class="map" style="background-image: url('https://images.squarespace-cdn.com/content/v1/54f31d5fe4b04ab92e183f79/1523905505470-555WPMY7ML5KQ5IZAC7Z/Brackenbury+cropped+Jpeg.jpg')"></div>
</div>
 </div>

<div class="flat-form">

<div class="flat-form-book">
  <form action="">
  <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-primary mt-2" style="width: 100%">
        </form></div>

    <div class="flat-form-details">
      <h3>Details</h3>
      <div class="flat-form-details-flex">
      <p><%= @flat.number_of_guests %> people</p>
      <p><%= @flat.price_per_night %>â‚¬</p>
      </div>
    </div>

    <div class="flat-show-card">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
    </div>
  </div>
</div>
</div>
